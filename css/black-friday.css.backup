.testimonial-card {
    background: var(--white);
    padding: 25px;
    border-radius: 15px;
    box-shadow: var(--shadow-light);
    font-style: italic;
}

.testimonial-card .author {
    margin-top: 15px;
    font-weight: 700;
    font-style: normal;
    color: var(--primary-blue);
